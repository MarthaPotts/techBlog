{{!-- uses the 'your dashboard header' --}}
<header class='intro'>
    <h1 class='name'>Your Dashboard</h1>
</header>
<div class='edit-post-container'>
    <p class='header'>Edit Post </p>
    <form class='edit-post-form'>
        <h3 class='title-edit'>Title</h3>
          <textarea class='edit-title'
          placeholder='new title'></textarea>
        <h3 class='content-edit'>Content</h3>
          <textarea class='post-content'
          placeholder='new content'></textarea>
    <button class='update' type='submit'>Update</button>
    <button class='delete' type='submit'>Delete</button>
    </form>
</div>